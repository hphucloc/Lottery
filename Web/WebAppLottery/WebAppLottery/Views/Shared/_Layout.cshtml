@model WebAppLottery.Models.IndexPageModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap4-toggle.min.css">
    <!--===============================================================================================-->

    <title>Thống kê Vietlott</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <table cellpadding="50" cellspacing="50">
                    <tr>
                        <td>
                            @Html.ActionLink("Đăng nhập/Đăng ký", "", "", new { @class = "HeaderLinkColor" })
                        </td>
                        <td>
                            @Html.ActionLink("Chia sẻ kinh nghiệm", "", "", new { @class = "HeaderLinkColor" })
                        </td>
                        <td>
                            @Html.ActionLink("Dự đoán số", "", "", new { @class = "HeaderLinkColor" })
                        </td>
                        <td>
                            @if (Model.ListLoaiVe == WebAppLottery.Models.IndexPageModel.LoaiVe._6Over55)
                            {
                                <a href="https://vietlott.vn/vi/trung-thuong/ket-qua-trung-thuong/winning-number-655"
                                   title="Đi đến trang Vietlott 655" target="_blank" class="HeaderLinkColor">Vietlott website</a>
                            }
                            else if (Model.ListLoaiVe == WebAppLottery.Models.IndexPageModel.LoaiVe._6Over45)
                            {
                                <a href="https://vietlott.vn/vi/trung-thuong/ket-qua-trung-thuong/winning-number-645"
                                   title="Đi đến trang Vietlott 645" target="_blank" class="HeaderLinkColor">Vietlott website</a>
                            }

                            @*https://vietlott.vn/vi/trung-thuong/ket-qua-trung-thuong/winning-number-Keno
                                https://vietlott.vn/vi/trung-thuong/ket-qua-trung-thuong/winning-number-max-3D
                                https://vietlott.vn/vi/trung-thuong/ket-qua-trung-thuong/winning-number-max-3Dpro
                                https://vietlott.vn/vi/trung-thuong/ket-qua-trung-thuong/winning-number-max-4d*@
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Request", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="bg-img1 size1 flex-w flex-c-m p-t-55 p-b-55 p-l-15 p-r-15"
             style="background-image: url('../../images/bg01.jpg');">
            <div class="wsize1 bor1 bg-light p-t-10 p-b-1 p-l-15 p-r-15 respon1 d-flex justify-content-center border border-info">
                @Html.Partial("_RequestHeader", Model)
            </div>
            @if (Model.Data != null)
            {
                <div class="wsize1 bor1 bg1 p-t-1 p-b-1 p-l-15 p-r-15 respon1 d-flex justify-content-start border border-info">
                    <div class="wsize3">
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                @RenderBody()
            }
            @if (Model.NoAppear1To7 != null &&
                Model.NoAppear8To15 != null &&
                Model.NoAppear16To23 != null &&
                Model.NoAppear24To31 != null &&
                Model.NoAppear32To39 != null &&
                Model.NoAppear40To47 != null &&
                Model.NoAppear48To55 != null)
            {
                <div class="wsize1 bor1 bg-light p-t-10 p-b-1 p-l-15 p-r-15 respon1 d-flex justify-content-center border border-info">
                    @Html.Partial("_GroupNumberStatistic", Model)
                </div>
            }
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#ListLoaiVe").addClass('LoaiVe100');
            if (!!$('#HiddenFrom').val())
                $('#From').val($('#HiddenFrom').val());
            if (!!$('#HiddenTo').val())
                $('#To').val($('#HiddenTo').val());
        });
    </script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
    <script src="~/js/bootstrap4-toggle.min.js"></script>
</body>
</html>
