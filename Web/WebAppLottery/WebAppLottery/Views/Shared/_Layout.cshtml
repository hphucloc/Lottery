            processData: true,
            cache: false,
            success: function (data) {
                $('#modaltitleThongKeDuDoan').text('THỐNG KÊ DỰ ĐOÁN 6/55');
                $('#modalbodyThongKeDuDoan').html(data);
                // show modal
                $('#modalThongKeDuDoan').modal('show');
            },
            error: function (xhr) {
                alert('error');
            }
        });
    }

    </script>
